<%= form_tag(runs_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Runs" %>
    <%= submit_tag "Search" %>
<% end %>

<% if @runs.present? %>
    <ol>
      <%= render @runs %>
    </ol>
<% else %>
  <p>There are no posts containing the term(s) <%= params[:search] %>.</p>
<% end %>