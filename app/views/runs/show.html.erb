<div class="row">
    <aside class="col-sm-12 col-md-3">
        <section class="stages">
            <% if @run.stages.any? %>
              <ol class="stages">
                <%= render @stages %>
              </ol>
            <% else %>
                <% if @run.user == current_user %>
                    <p>Add stages description!</p>
                <% else %>
                    <p>No stages yet</p>
                <% end %>
            <% end %>
        </section>
    </aside>
    <div class="col-sm-12 col-md-9">
        <div class="videowrapper">
            <iframe width="420" height="315" src="<%= @run.youtube_embed %>"></iframe>
        </div>
        <div class="vid_info">
            <h3><%= @run.title %></h3>
        </div>
    </div>
</div>

