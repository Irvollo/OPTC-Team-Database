<div id="stages-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Add stages description</h4>
        
         <%= form_for @run, remote: true do |f| %>
        <div class="modal-body">
            <%= f.fields_for :stages do |stage| %>
            <div class="form-group">
              <%= stage.label :description, "Stage " + (stage.index + 1).to_s + ":" %><br>
              <%= stage.text_area :description, class: "form-control input-lg" %>
              <%= stage.hidden_field :run_id, value: (@run.id) %>
              <%= stage.hidden_field :number, value: (stage.index + 1) %>
            </div>
          <% end %>
        <div class="modal-footer">
          <%= f.submit class: "btn btn-primary btn-lg btn-block" %>
        </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
